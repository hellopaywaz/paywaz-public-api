{
  "name": "paywaz-public-api",
  "version": "0.1.0",
  "description": "Public OpenAPI specification for the Paywaz API.",
  "private": true,
  "license": "SEE LICENSE IN paywaz-license",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "openapi:lint": "redocly lint openapi/openapi.yaml",
    "openapi:bundle": "redocly bundle openapi/openapi.yaml -o dist/openapi.bundle.yaml",
    "lint": "npm run openapi:lint",
    "test": "npm run lint",
    "build": "mkdir -p dist && npm run openapi:bundle",
    "start": "redocly preview-docs openapi/openapi.yaml --host 0.0.0.0 --port 8080"
  },
  "devDependencies": {
    "@redocly/cli": "1.29.0"
  }
}
